<div class="row" ng-controller="mainCtrl" >

    <ul class="nav nav-tabs" >
        <li class="active" ><a data-toggle="tab" href="#home" >Home</a ></li >
        <li ><a data-toggle="tab" href="#Cinema" ng-click='getCinemas()' >Cinema</a ></li >
        <li ><a data-toggle="tab" href="#Halls" >Hols</a ></li >
        <li ><a data-toggle="tab" href="#Films" >Films</a ></li >
        <li ><a data-toggle="tab" href="#Sessions" >Sessions</a ></li >
    </ul >

    <div class="tab-content" >
        <div id="home" class="tab-pane fade in active" >
            <div class="col-md-12 panel-primary" >
                <h3 >WELLCOME!</h3 >
            </div >
        </div >
        <div id="Cinema" class="tab-pane fade" >
            <div class="col-md-12 panel-primary" >
                <h3 >Cinema</h3 >
                <button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModalCinema" >
                    add cinema
                </button >

                <!-- Modal -->
                <div class="modal fade" id="myModalCinema" tabindex="-1" role="dialog"
                        aria-labelledby="myModalLabel" aria-hidden="true" >
                    <div class="modal-dialog" >
                        <div class="modal-content" >
                            <!-- Modal Header -->
                            <div class="modal-header" >
                                <button type="button" class="close"
                                        data-dismiss="modal" >
                                    <span aria-hidden="true" >&times;</span >
                                    <span class="sr-only" >Close</span >
                                </button >
                                <h4 class="modal-title" id="myModalLabel" >
                                    add cinema
                                </h4 >
                            </div >

                            <!-- Modal Body -->
                            <div class="modal-body" >

                                <form class="form-horizontal" role="form" ng-submit="addCinema(newCinema)" >
                                    <div class="form-group" >
                                        <label class="col-sm-2 control-label"
                                                for="inputname" >Name</label >
                                        <div class="col-sm-10" >
                                            <input type="text" class="form-control" required ng-model="newCinema.name"
                                                    id="inputname" placeholder="name" />
                                        </div >
                                    </div >
                                    <div class="form-group" >
                                        <label class="col-sm-2 control-label"
                                                for="inputsity" >City</label >
                                        <div class="col-sm-10" >
                                            <input type="text" class="form-control" required ng-model="newCinema.city"
                                                    id="inputsity" placeholder="city" />
                                        </div >
                                    </div >
                                    <div class="form-group" >
                                        <div class="col-sm-offset-2 col-sm-10" >
                                            <button type="submit" class="btn btn-default" >Send</button >
                                        </div >
                                    </div >

                                </form >
                            </div >


                        </div >
                    </div >
                </div >

                <table class="table " >
                    <thead >
                    <th > name</th >
                    <th > city</th >
                    </thead >
                    <tbody >
                    <tr ng-repeat="cinema in data.cinemas" >
                        <td ng-bind="cinema.id" ></td >
                        <td ng-bind="cinema.name" ></td >
                        <td ng-bind="cinema.city" ></td >

                    </tr >
                    </tbody >
                </table >
            </div >
        </div >


        <div id="Halls" class="tab-pane fade" >
            <div class="col-md-12 panel-primary" >
                <h3 >Halls</h3 >
                <button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModalHall" >
                    add hall
                </button >

                <!-- Modal -->
                <div class="modal fade" id="myModalHall" tabindex="-1" role="dialog"
                        aria-labelledby="myModalLabelHall" aria-hidden="true" >
                    <div class="modal-dialog" >
                        <div class="modal-content" >
                            <!-- Modal Header -->
                            <div class="modal-header" >
                                <button type="button" class="close"
                                        data-dismiss="modal" >
                                    <span aria-hidden="true" >&times;</span >
                                    <span class="sr-only" >Close</span >
                                </button >
                                <h4 class="modal-title" id="myModalLabelHall" >
                                    halls
                                </h4 >
                            </div >

                            <!-- Modal Body -->
                            <div class="modal-body" >

                                <form name="myFormHalls" class="form-horizontal" role="form"  ng-submit="addHall(newHall)">
                                    <div class="form-group" >
                                        <label class="col-sm-2 control-label"
                                                for="inputname" >Name</label >
                                        <div class="col-sm-10" >
                                            <input type="text" class="form-control" required ng-model="newHall.name"
                                                    id="inputname" placeholder="number" />
                                        </div >
                                    </div >
                                    <div class="form-group" >
                                        <label class="col-sm-2 control-label"
                                                for="inputcinemaId" >Cinema</label >
                                        <div class="col-sm-10" >
                                            <select class="form-control" ng-model="newHall.cinema" required placeholder="cinema"
                                                    ng-options="item.name for item in data.cinemas track by item.id" >
                                            </select >
                                        </div >
                                    </div >

                                    <div class="form-group" >
                                        <label class="col-sm-2 control-label"
                                                for="inputquantity" >Quantity</label >
                                        <div class="col-sm-10" >
                                            <input type="number" class="form-control" required ng-model="newHall.quantity"
                                                    id="inputquantity" placeholder="quantity" />
                                        </div >
                                    </div >
                                    <div class="form-group" >
                                        <div class="col-sm-offset-2 col-sm-10" >
                                            <button type="submit" class="btn btn-default" >Send</button >
                                        </div >
                                    </div >

                                </form >
                            </div >


                        </div >
                    </div >
                </div >
                <div class="col-md-12 panel-primary" >
                    <form class="form-inline"   ng-submit="getHalls()" >

                        <div class="form-group" >
                            <label class="col-sm-4 control-label"
                                    for="inputcinemaIdd" >Cinema</label >
                            <div class="col-sm-8" >
                                <select class="form-control" ng-model="selectedCinema" required
                                        ng-options="item.name for item in data.cinemas track by item.id" >
                                </select >
                            </div >
                        </div >
                        <button type="submit" class="btn btn-default" >get</button >
                    </form >
                </div >
                <table class="table " >
                    <thead >
                    <th > name</th >

                    <th > quantity</th >
                    </thead >
                    <tbody >
                    <tr ng-repeat="hall in data.halls | filter: { cinemaId : selectedCinema.id}" >
                        <td ng-bind="hall.name" ></td >

                        <td ng-bind="hall.quantity" ></td >
                    </tr >
                    </tbody >
                </table >
            </div >
        </div >
        <div id="Films" class="tab-pane fade" >
            <div class="col-md-12 panel-primary" >
                <h3 >Films</h3 >
                <table class="table " >
                    <tbody >
                    <tr ng-repeat="email in emails " >
                        <td ng-bind="email.emailTo" ></td >
                        <td ng-bind="email.subject" ></td >
                        <td ng-bind="email.message" ></td >
                        <td ng-bind="email.createdAt" ></td >
                        <td ><input type="checkbox" ng-model="email.delete" /> delete</td >
                    </tr >
                    </tbody >
                </table >
            </div >
        </div >
        <div id="Sessions" class="tab-pane fade" >
            <div class="col-md-12 panel-primary" >
                <h3 >Sessions</h3 >
                <table class="table " >
                    <tbody >
                    <tr ng-repeat="email in emails " >
                        <td ng-bind="email.emailTo" ></td >
                        <td ng-bind="email.subject" ></td >
                        <td ng-bind="email.message" ></td >
                        <td ng-bind="email.createdAt" ></td >
                        <td ><input type="checkbox" ng-model="email.delete" /> delete</td >
                    </tr >
                    </tbody >
                </table >
            </div >
        </div >
    </div >

